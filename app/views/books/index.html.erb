<h1><%= @page_title %></h1>


<%= form_tag(books_path, :method => "get", id: "search-form") do %>
    <div class="input-append" align="right">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search..." %>
      <%= submit_tag "Search", :title => nil %>

    </div>

<% end %>


<!--showing books with pagination  -->

<%= render "/shared/list_books" %>

<div style="float: left;margin-left: 40px;"><%= page_entries_info @books %></div>
<div style="float: right;"><%= paginate @books %></div>

